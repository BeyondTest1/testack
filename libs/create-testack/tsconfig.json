{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
    "module": "commonjs",
    "composite": true,
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/templates/tests/**/*.test.js"]
}
