{
  "name": "create-testack",
  "version": "1.0.22",
  "description": "A single-command tool to setup Testack.js",
  "main": "dist/index.js",
  "module": "esm/index.js",
  "bin": {
    "create-testack": "./dist/index.js"
  },
  "files": [
    "dist",
    "esm",
    "src"
  ],
  "scripts": {
    "start": "ts-node src/index.ts",
    "clean": "rimraf dist esm",
    "prebuild": "npm run clean",
    "build:cjs": "tsc --module commonjs --outDir dist",
    "build:esm": "tsc --target es2018 --outDir esm",
    "build": "npm run build:esm && npm run build:cjs",
    "postversion": "git push --follow-tags",
    "preversion": "npm run build",
    "test": "jest",
    "create-testack": "tsc && node dist/index.js",
    "esbuild": "esbuild --bundle src/index.ts --outdir=dist --platform=node --target=ES2019",
    "test:publish": "cd $(mktemp -d -t ci-XXXXXXXXXX) && npm init testack --  --template=javascript"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyondtest/testack.git"
  },
  "author": "Guy Eliyahu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/beyondtest/testack/issues"
  },
  "homepage": "https://github.com/beyondtest/testack#readme",
  "dependencies": {
    "configstore": "^5.0.1",
    "ejs": "^3.1.8",
    "fs-extra": "^11.1.0",
    "inquirer": "^8.2.4",
    "lmify": "^0.3.0",
    "shelljs": "^0.8.5",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@types/configstore": "^4.0.0",
    "@types/ejs": "^3.1.1",
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.18",
    "@types/shelljs": "^0.8.11",
    "@types/yargs": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.27.0",
    "jest": "^29.4.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
